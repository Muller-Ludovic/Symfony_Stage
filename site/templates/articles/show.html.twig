{% extends 'base.html.twig' %}

{% block title %}{{ articles.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>{{ articles.title }}</h1>
            <small>{{ articles.createdAt|date('d/m/Y') }}
            <img src="https://picsum.photos/800/400" class="Hero-new"/>
        </div><br><hr>
    </div>
    <div class="row">
        <div class="col-12">
           <p class="p-articles"> {{ articles.content }} </p>
        </div>
    </div>
</div>
br
{% endblock %}